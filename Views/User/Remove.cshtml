
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Remove Users";
}

@model Microsoft.AspNetCore.Identity.IdentityUser

<section class="list-container">
    <h2>Users</h2>
    <div class="modal fade" id="userRemoveModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Remove user</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <span>Confirm exclusion?</span>
                    <form id="remove-user" asp-action="RemoveUser" asp-controller="User" method="post">
                        <input asp-for="@Model.Email" class="input-hide"/>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button form="remove-user" type="submit" class="btn btn-danger">Confirm</button>
                </div>
            </div>
        </div>
    </div>
    <ul class="list">
        <li class="list-row list-header">
            <div class="list-item">
                <span class="list-data">Name</span>
            </div>
            <div class="list-item">
                <span class="list-data">Email</span>
            </div>
            <div class="list-item">
                <span class="list-data list-btn">Remove</span>
            </div>
        </li>
        <li class="list-row">
            <div class="list-item">
                <span class="list-data">@Model.UserName</span>
            </div>
            <div class="list-item">
                <span class="list-data">@Model.Email</span>
            </div>
            <div class="list-item">
                <a class="btn btn-danger" data-toggle="modal" data-target="#userRemoveModal" title="Remove User">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                    </svg>
                </a>
            </div>
        </li>
    </ul>
</section>

